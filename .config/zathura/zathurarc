

set recolor true
set recolor-keephue true

# NOTE: nightfox
set default-bg "#192330"         # Dark navy background
set default-fg "#cdcecf"         # Light grey text

# Recolor to enforce dark theme rendering
set recolor true
set recolor-keephue false
set recolor-lightcolor "#192330"   # PDF background
set recolor-darkcolor "#cdcecf"    # PDF foreground (text)

# UI Components - Nightfox palette
set statusbar-bg "#393b44"
set statusbar-fg "#cdcecf"

set inputbar-bg "#393b44"
set inputbar-fg "#cdcecf"

set completion-bg "#393b44"
set completion-fg "#cdcecf"

set notification-bg "#393b44"
set notification-fg "#cdcecf"

set highlight-color "#719cd6"         # Blue highlight
set highlight-active-color "#ff966c"  # Orange active highlight
