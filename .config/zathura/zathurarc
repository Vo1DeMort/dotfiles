# NOTE: Tokyo Night Night theme
set default-bg "#1a1b26"        # Tokyo Night Night background
set default-fg "#c0caf5"        # Light blue text

set recolor-lightcolor "#1a1b26"
set recolor-darkcolor  "#c0caf5"

set statusbar-bg "#292e42"      # Slightly lighter than bg
set statusbar-fg "#7aa2f7"      # Blue

set inputbar-bg "#292e42"
set inputbar-fg "#7dcfff"       # Cyan

set completion-bg "#292e42"
set completion-fg "#c0caf5"

set notification-bg "#292e42"
set notification-fg "#f7768e"   # Soft red




