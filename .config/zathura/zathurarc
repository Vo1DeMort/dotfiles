#NOTE: solazied theme
set default-bg "#002b36"        # Solarized dark background
set default-fg "#839496"        # Solarized light text

set recolor-lightcolor "#002b36"   # Solarized dark color for light mode
set recolor-darkcolor "#839496"    # Solarized light color for dark mode

set statusbar-bg "#073642"    # Solarized status bar background
set statusbar-fg "#93a1a1"    # Solarized status bar text

set inputbar-bg "#073642"     # Solarized input bar background
set inputbar-fg "#93a1a1"     # Solarized input bar text

set completion-bg "#073642"    # Solarized completion background
set completion-fg "#93a1a1"    # Solarized completion text
set notification-bg "#073642"  # Solarized notification background
set notification-fg "#93a1a1"  # Solarized notification text
