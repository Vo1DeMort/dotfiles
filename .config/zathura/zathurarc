# NOTE: Gruvbox Light Medium Theme
set default-bg      "#f2e5bc"  # Medium contrast background
set default-fg      "#3c3836"  # Standard dark foreground

set recolor-lightcolor "#f2e5bc"  # Light background (medium variant)
set recolor-darkcolor  "#3c3836"  # Gruvbox dark text

set statusbar-bg    "#e0cfa9"  # Bar background (darker than main)
set statusbar-fg    "#504945"  # Muted dark grey

set inputbar-bg     "#e0cfa9"  # Match status bar
set inputbar-fg     "#af3a03"  # Deep orange (accent)

set completion-bg   "#e0cfa9"  # Completion box background
set completion-fg   "#79740e"  # Gruvbox olive

set notification-bg "#e0cfa9"  # Notification background
set notification-fg "#9d0006"  # Gruvbox red for alerts

